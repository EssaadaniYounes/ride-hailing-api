generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  DRIVER
}

enum RideState {
  MATCHING
  DRIVER_ASSIGNED
  ARRIVED
  ONGOING
  COMPLETED
  CANCELLED
}

enum RideEventType {
  RIDE_REQUESTED
  DRIVER_OFFERED
  DRIVER_ASSIGNED
  DRIVER_ARRIVED
  RIDE_STARTED
  RIDE_COMPLETED
  RIDE_CANCELLED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  createdAt DateTime @default(now())

  driver Driver?
  rides  Ride[]  @relation("UserRides")

  @@index([createdAt])
}

model Driver {
  id          String   @id @default(uuid())
  userId      String   @unique
  lat         Float
  lng         Float
  isAvailable Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id])
  rides Ride[]

  @@index([isAvailable])
}

model Ride {
  id       String  @id @default(uuid())
  userId   String
  driverId String?

  pickupLat  Float
  pickupLng  Float
  dropoffLat Float
  dropoffLng Float

  distanceKm Float
  etaMinutes Int
  price      Float

  state     RideState
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user   User    @relation("UserRides", fields: [userId], references: [id])
  driver Driver? @relation(fields: [driverId], references: [id])

  events       RideEvent[]
  cancellation Cancellation?
}

model RideEvent {
  id        String        @id @default(uuid())
  rideId    String
  type      RideEventType
  payload   Json?
  createdAt DateTime      @default(now())

  ride Ride @relation(fields: [rideId], references: [id])

  @@index([rideId])
}

model Cancellation {
  id          String   @id @default(uuid())
  rideId      String   @unique
  cancelledBy UserRole
  reason      String
  createdAt   DateTime @default(now())

  ride Ride @relation(fields: [rideId], references: [id])
}
